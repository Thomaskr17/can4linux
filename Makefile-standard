		$(CAN_MODULE)-objs += sja1000funcs.o
		$(CAN_MODULE)-objs += pcm9890.o
	    endif
	    ifeq "$(TARGET)" "CPC104"
		$(CAN_MODULE)-objs += sja1000funcs.o
		$(CAN_MODULE)-objs += cpc_104.o
	    endif
	    ifeq "$(TARGET)" "CPC_PCM_104"
